---
import Wrapper from '../components/Wrapper.astro'
import DATA from '../../information.json'
const {
  entidades: {
    title,
    desc,
    organizing,
    sponsors,
    'co-organizing': coorganizing,
  },
} = DATA

const existItems = sponsors.length > 0
---

<section class="bg-black py-20 text-white">
  <Wrapper>
    <h2 class="text-center md:text-5xl font-bold mb-2 text-3xl">{title}</h2>
    <p class="text-center text-white/80 mb-6">{desc}</p>
    <h3
      class="md:text-2xl md:text-left text-center font-bold mb-2 mt-8 text-xl"
    >
      Organizing Institutions
    </h3>
    <div
      class="flex mt-4 flex-wrap sm:flex-row flex-col items-center md:justify-start justify-center md:gap-0 gap-6"
    >
      {
        organizing.map(item => (
          <div
            class="min-w-[130px] md:min-w-[249.6px] max-w-[20%] flex items-center justify-center"
            title={item.name}
          >
            <a
              href={item.url}
              class="h-24 opacity-80 hover:opacity-100 transition-opacity duration-300"
            >
              <img
                src={`${import.meta.env.PROD ? '/SIMBig2024' : ''}${item.image}`}
                alt={item.name}
              />
            </a>
          </div>
        ))
      }
    </div>
    <h3
      class="md:text-2xl md:text-left text-center font-bold mb-2 mt-8 text-xl"
    >
      Co-organizing Institutions
    </h3>
    <div
      class="flex mt-4 flex-wrap sm:flex-row flex-col items-center md:justify-start justify-center md:gap-0 gap-6"
    >
      {
        coorganizing.map(item => (
          <div
            class="min-w-[130px] md:min-w-[249.6px] max-w-[20%] flex items-center justify-center"
            title={item.name}
          >
            <a
              href={item.url}
              class="h-32 w-32 opacity-80 hover:opacity-100 transition-opacity duration-300"
            >
              <img
                src={`${import.meta.env.PROD ? '/SIMBig2024' : ''}${item.image}`}
                alt={item.name}
              />
            </a>
          </div>
        ))
      }
      <div
        class="min-w-[130px] md:min-w-[249.6px] max-w-[20%] flex items-center justify-center"
        title={'Aimara'}
      >
        <a
          href={'https://www.aimaralab.com/'}
          class="h-32 w-auto opacity-80 flex items-center hover:opacity-100 transition-opacity duration-300"
        >
          <img
            src={`${import.meta.env.PROD ? '/SIMBig2024' : ''}${'/assets/7.webp'}`}
            alt={'Aimara'}
          />
        </a>
      </div>
    </div>
    {
      existItems && (
        <>
          <h3 class="text-left text-2xl font-bold mb-2 mt-8 ">Sponsors</h3>
          <div class="flex mt-4 flex-wrap sm:flex-row flex-col items-center md:justify-start justify-center md:gap-0 gap-6">
            {sponsors.map(({ url, image, name }) => (
              <div
                class="min-w-[249.6px] max-w-[20%] flex items-center justify-center"
                title={name}
              >
                <a
                  href={url}
                  class="h-24 w-24 opacity-80 hover:opacity-100 transition-opacity duration-300"
                  target="_blank"
                >
                  <img
                    src={`${import.meta.env.PROD ? '/SIMBig2024' : ''}${image}`}
                    alt={name}
                    class="w-full h-full object-contain "
                  />
                </a>
              </div>
            ))}
            <div
              class="min-w-[249.6px] max-w-[20%] flex items-center justify-center"
              title={'John Franco Rojas'}
            >
              <a
                href={'https://www.linkedin.com/in/john-franco-rojas-258468a9/'}
                class="h-24 opacity-80 hover:opacity-100 transition-opacity duration-300"
                target="_blank"
              >
                <img
                  src={`${import.meta.env.PROD ? '/SIMBig2024' : ''}${'/assets/images/franco.png'}`}
                  alt={'John Franco Rojas'}
                  class="w-full h-full object-contain "
                />
              </a>
            </div>
          </div>
        </>
      )
    }
  </Wrapper>
</section>
