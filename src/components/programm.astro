---
import DATA from '../../information.json'
const {
  'organizing-committee': { programm },
} = DATA
---

{
  programm
    .sort((a, b) => {
      const bandA = a.name.toUpperCase()
      const bandB = b.name.toUpperCase()

      let comparison = 0
      if (bandA > bandB) {
        comparison = 1
      } else if (bandA < bandB) {
        comparison = -1
      }
      return comparison
    })
    .map(item => (
      <li>
        <span class="font-bold">{item.name}</span>,{' '}
        <span class="italic">{item.affiliation}</span>,{' '}
        <span class="font-bold italic">{item.country}</span>
      </li>
    ))
}
