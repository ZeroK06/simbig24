---
import Wrapper from '../components/Wrapper.astro'
import DATA from '../../information.json'
const {
  dates: { title, paragraph, content },
} = DATA
---

<section class="py-20">
  <Wrapper>
    <span class="text-primary font-medium text-base text-center block"
      >[Our Important Dates]</span
    >
    <h2 class="text-center md:text-5xl font-bold mb-2 text-3xl">{title}</h2>
    <p class="text-center text-black/80 mb-6">{paragraph}</p>
    <div class="flex flex-col">
      {
        content.map(item => (
          <div>
            <div class="w-full gap-4 flex py-4 px-8 rounded-lg md:flex-row flex-col items-center">
              <div class="min-w-0 md:min-w-[200px] text-xl md:text-lg font-semibold flex items-center">
                {item.date}
              </div>
              <div class="flex-1 flex gap-10 flex-col sm:flex-row items-center">
                <div class="h-32 w-32 rounded-lg bg-red-400 overflow-hidden">
                  <img
                    src={item.image}
                    class="w-[120%] h-full object-cover"
                    alt={item.name}
                  />
                </div>
                <div class="flex flex-1 flex-col gap-1 items-center sm:items-start justify-center">
                  <h4 class="text-xl font-semibold sm:text-left text-center">
                    {item.name}
                  </h4>
                  <p class="text-base text-black/70 sm:text-left text-center">
                    {item.desc}
                  </p>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </Wrapper>
</section>
