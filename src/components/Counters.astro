---
import Wrapper from '../components/Wrapper.astro'
import DATA from '../../information.json'
const {
  counters: { banner, participants, articles, speakers },
} = DATA
---

<section class="text-white py-24 bg-bg">
  <Wrapper>
    <div class="flex justify-around flex-col sm:flex-row gap-10 sm:gap-4">
      <div class="max-w-2xl w-full">
        <h3 class="text-5xl font-bold text-center">+{participants.number}</h3>
        <p class="text-2xl text-balance text-center">{participants.text}</p>
      </div>
      <div class="max-w-2xl w-full">
        <h3 class="text-5xl font-bold text-center">+{articles.number}</h3>
        <p class="text-2xl text-balance text-center">{articles.text}</p>
      </div>
      <div class="max-w-2xl w-full">
        <h3 class="text-5xl font-bold text-center">+{speakers.number}</h3>
        <p class="text-2xl text-balance text-center">{speakers.text}</p>
      </div>
    </div>
  </Wrapper>
</section>
