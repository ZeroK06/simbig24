---
import Wrapper from '../components/Wrapper.astro'
import DATA from '../../information.json'
const {
  counters: { banner, participants, articles, speakers },
} = DATA
---

<section
  class="text-white py-28"
  style={{
    background: `url(${banner})`,
    backgroundPosition: 'center',
  }}
>
  <Wrapper>
    <div class="flex justify-around">
      <div class="max-w-2xl w-full">
        <h3 class="text-4xl font-bold text-center">{participants.number}</h3>
        <p class="text-2xl text-balance text-center">{participants.text}</p>
      </div>
      <div class="max-w-2xl w-full">
        <h3 class="text-4xl font-bold">{participants.number}</h3>
        <p class="text-2xl text-balance">{participants.text}</p>
      </div>
      <div class="max-w-2xl w-full">
        <h3 class="text-4xl font-bold">{participants.number}</h3>
        <p class="text-2xl text-balance">{participants.text}</p>
      </div>
    </div>
  </Wrapper>
</section>
