---
import Wrapper from '../components/Wrapper.astro'
import DATA from '../../information.json'
const {
  about: { paragraph, image, title },
} = DATA
---

<Wrapper>
  <section class="py-20">
    <div class="flex gap-8 flex-col md:flex-row">
      <div class="flex-1 flex flex-col justify-center gap-3">
        <h2 class="text-5xl font-bold">{title}</h2>
        <p class="text-balance">{paragraph}</p>
      </div>
      <div class="flex-1">
        <div class="aspect-auto h-[400px] bg-black">
          <img
            src={`${import.meta.env.PROD ? '/SIMBig2024' : ''}${image}`}
            alt={title}
            class="h-full w-full object-cover"
          />
        </div>
      </div>
    </div>
  </section>
</Wrapper>
